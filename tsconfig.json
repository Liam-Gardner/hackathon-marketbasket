{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "build",
      "sourceMap": false,
      "allowSyntheticDefaultImports": true,
      "lib": ["es6"],
      "allowJs": true,
      "rootDir": "./",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "downlevelIteration": true
    },
    "exclude": ["node_modules", "**/*.test.ts", "./build/**/*"],
    "include": ["**/*.ts"]
  }
  